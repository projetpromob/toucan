<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00374F"
    tools:context="promob.gospace.ScoreActivity">

    <TextView
        android:id="@+id/gameOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="Aventure terminÃ©e !"
        android:textAlignment="center"
        android:textColor="#FFDD00"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/acceuil_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayScore"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_style"
        android:padding="10dp"
        android:text="Retour Acceuil"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/displayScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:layout_below="@+id/gameOver"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="#FFDD00"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>