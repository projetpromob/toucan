<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00374F"
    tools:context="promob.gospace.Jeu_touch.GameOverActivity">

    <TextView
        android:id="@+id/gameOver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="Game Over"
        android:textAlignment="center"
        android:textColor="#FFDD00"
        android:textSize="70dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rejouer_btnA"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOver"
        android:layout_centerHorizontal="true"
        android:background="#FFDD00"
        android:padding="10dp"
        android:text="Rejouer !"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/changer_btnA"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rejouer_btnA"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#FFDD00"
        android:padding="10dp"
        android:text="Changer de jeu"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/displayScoreA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="178dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFDD00"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

</RelativeLayout>