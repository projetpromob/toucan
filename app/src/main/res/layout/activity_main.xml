<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="promob.gospace.MainActivity"
    android:background="@drawable/fondglobal2"
    >

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/multi"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="Rentrez votre prénom : "
        android:textColor="#FFDD00"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/activity_main_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_greeting_txt"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Entrer votre prénom"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/multi"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/activity_main_name_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textColor="#FFDD00"
        android:textSize="30sp"
        android:text="Multijoueurs"
        android:onClick="sendMulti"
        />

    <Button
        android:id="@+id/solo"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/multi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#FFDD00"
        android:textSize="30sp"
        android:text="Solo"
        android:onClick="sendSolo"
        />



</RelativeLayout>