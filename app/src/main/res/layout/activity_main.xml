<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="promob.gospace.MainActivity"
    android:background="@drawable/fondglobalmain"
    >

    <TextView
        android:id="@+id/activity_main_greeting_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Choissisez votre mode de jeu"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:textStyle="bold|italic" />


    <Button
        android:id="@+id/multi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_main_greeting_txt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="270dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendMulti"
        android:text="Multijoueurs"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/solo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/multi"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendSolo"
        android:text="Solo"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/morpion"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/solo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendMorpion"
        android:text="Morpion"
        android:textColor="#FFDD00"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_cache"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/buttonshape"
        android:onClick="sendCredit"
        android:text="*"
        android:textColor="#FFDD00"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>