<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="promob.gospace.MainActivity"
    android:background="@drawable/fondglobal2"
    >

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez votre jeu !"
        android:textSize="30dp"
        android:textColor="#FFDD00"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/jeuTouch"
        android:layout_width="350dp"
        android:layout_height="60dp"

        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/videoView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#FFDD00"
        android:textSize="30sp"
        android:text="Jeu toucher"
        />
    <Button
        android:id="@+id/jeuAccelerometre"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/jeuTouch"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFDD00"
        android:textSize="30sp"
        android:text="Jeu Accelerometre"
        />

    <Button
        android:id="@+id/jeuMorpion"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/jeuAccelerometre"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFDD00"
        android:textSize="30sp"
        android:text="Morpion"
        />

    <Button
        android:id="@+id/jeuQuizz"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/jeuMorpion"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFDD00"
        android:textSize="30sp"
        android:text="Quizz"
        />


        <VideoView
            android:id="@+id/videoView"
            android:layout_width="95dp"
            android:layout_height="150dp"
            android:layout_below="@+id/titre"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <VideoView
        android:id="@+id/videoView2"
        android:layout_width="95dp"
        android:layout_height="150dp"
        android:layout_below="@+id/titre"
        android:layout_toRightOf="@+id/videoView"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/apercu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoView"
        android:text="Aperçu jeu toucher"
        android:layout_marginLeft="60dp"
        android:textColor="#FFDD00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/videoView2"
        android:layout_toRightOf="@+id/apercu"
        android:layout_marginLeft="10dp"
        android:text="Aperçu jeu accelerometre"
        android:textColor="#FFDD00"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Test" />


</RelativeLayout>